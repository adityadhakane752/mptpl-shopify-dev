{%- comment -%}
Mobile-Optimized Image Banner Section
Clean, simple, and performance-focused
{%- endcomment -%}

{{ 'mobile-optimized-homepage.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #Banner-{{ section.id }} {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #Banner-{{ section.id }} .banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #Banner-{{ section.id }} .banner__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #Banner-{{ section.id }} .banner__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Force black background for accent-2 - CRITICAL */
  #Banner-{{ section.id }}.color-accent-2,
  #Banner-{{ section.id }}.color-accent-2 .banner__box,
  #Banner-{{ section.id }}.color-accent-2 .banner__content {
    background: #000000 !important;
    background-color: #000000 !important;
    color: #ffffff !important;
  }

  #Banner-{{ section.id }}.color-accent-2 * {
    color: #ffffff !important;
  }

  /* Mobile-specific styles */
  @media screen and (max-width: 749px) {
    #Banner-{{ section.id }} {
      min-height: 60vh;
    }
    
    #Banner-{{ section.id }} .banner__heading {
      font-size: 1.75rem;
      line-height: 1.2;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    
    #Banner-{{ section.id }} .banner__text {
      font-size: 0.95rem;
      line-height: 1.5;
      margin-bottom: 2rem;
      opacity: 0.95;
    }
    
    #Banner-{{ section.id }} .banner__buttons {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }
    
    #Banner-{{ section.id }} .btn {
      width: 100%;
      max-width: 280px;
      padding: 1rem 2rem;
      text-align: center;
      border-radius: 6px;
      font-weight: 600;
      text-decoration: none;
      transition: opacity 0.2s ease;
    }
    
    #Banner-{{ section.id }} .btn:hover {
      opacity: 0.9;
    }
  }
{%- endstyle -%}

<div
  id="Banner-{{ section.id }}"
  class="banner banner--{{ section.settings.image_height }} {% if section.settings.show_text_below %}banner--mobile-bottom{% endif %} color-{{ section.settings.color_scheme }}"
>
  {%- if section.settings.image != blank -%}
    <div class="banner__media media">
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        assign sizes = '100vw'
      -%}
      {{ section.settings.image | image_url: width: 1920 | image_tag:
        loading: 'lazy',
        width: section.settings.image.width,
        height: image_height,
        sizes: sizes,
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        alt: section.settings.image.alt | escape
      }}
    </div>
  {%- endif -%}

  <div class="banner__content page-width">
    <div class="banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h1 class="banner__heading inline-richtext {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h1>
          {%- when 'text' -%}
            <div class="banner__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <p>{{ block.settings.text }}</p>
            </div>
          {%- when 'buttons' -%}
            <div class="banner__buttons" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="btn{% if block.settings.button_style_secondary_1 %} btn--secondary{% else %} btn--primary{% endif %}"
                >
                  {{- block.settings.button_label_1 | escape -}}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a
                  {% if block.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_2 }}"
                  {% endif %}
                  class="btn{% if block.settings.button_style_secondary_2 %} btn--secondary{% else %} btn--primary{% endif %}"
                >
                  {{- block.settings.button_label_2 | escape -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- comment -%} Simple JavaScript for mobile optimization {%- endcomment -%}
<script>
  // Ensure accent-2 backgrounds stay black on mobile
  (function() {
    if (window.innerWidth <= 749) {
      const banner = document.getElementById('Banner-{{ section.id }}');
      if (banner && banner.classList.contains('color-accent-2')) {
        banner.style.backgroundColor = '#000000';
        banner.style.background = '#000000';
        
        const boxes = banner.querySelectorAll('.banner__box, .banner__content');
        boxes.forEach(box => {
          box.style.backgroundColor = '#000000';
          box.style.background = '#000000';
          box.style.color = '#ffffff';
        });
        
        // Ensure all text is white
        const textElements = banner.querySelectorAll('h1, h2, h3, p, a, span');
        textElements.forEach(el => {
          el.style.color = '#ffffff';
        });
      }
    }
  })();
</script>

